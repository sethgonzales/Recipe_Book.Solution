@{
  Layout = "_Layout";
}

@using RecipeBook.Models;

<h2>Categories</h2>
@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Category category in Model)
    {
      <li class="lists">@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</li>
    }
  </ul>
}

<div class="navlinks three-links">
  <p>@Html.ActionLink("Add New Category", "Create")</p>
  <p>@Html.ActionLink("Add New Item", "Create", "Items")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>