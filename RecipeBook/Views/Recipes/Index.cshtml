@{
  Layout = "_Layout";
}

@using RecipeBook.Models;

<h2>Recipes for @User.Identity.Name</h2>

@if (@Model.Count == 0)
{
  <h3>No recipes have been created</h3>
} 
else
{
  <ul>
    @foreach (Recipe recipe in Model)
    {
      <li class="lists">@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId }) | @recipe.Category.Name</li>
    }
  </ul>
}

<div class="navlinks two-links">
<p>@Html.ActionLink("Add New Recipe", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>