@{
  Layout = "_Layout";
}

@model RecipeBook.Models.Recipe

<h2>Edit @Model.Name Recipe</h2><br />

<div class="form">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.RecipeId)

    <div class="form-block">
      @Html.LabelFor(model => model.Name)
      @Html.EditorFor(model => model.Name)
    </div>
    <div class="form-block">
      @Html.LabelFor(model => model.Instructions)
      @Html.TextAreaFor(model => model.Instructions, new { @class = "textbox" })
    </div>
    <div class="form-block">
      @Html.LabelFor(model => model.Ingredients)
      @Html.TextAreaFor(model => model.Ingredients, new { @class = "textbox" })
    </div>
    <div class="form-block">
      @Html.LabelFor(model => model.Category)
      @Html.DropDownList("CategoryId")
    </div>
    <div class="form-block">
      <input type="submit" class="btn btn-outline-dark" value="Save" />
    </div>
  }
</div>

<div class="navlinks">
  <p>@Html.ActionLink("My Recipes", "Index")</p>
</div>